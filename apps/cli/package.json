{
  "name": "vibrant",
  "version": "0.1.0",
  "description": "The AI-powered linter that detects vibecoded patterns",
  "type": "module",
  "main": "./src/bin.ts",
  "bin": {
    "vibrant": "./src/bin.ts"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "bun run src/bin.ts",
    "start": "bun run src/bin.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.38",
    "@ai-sdk/google": "^3.0.22",
    "@ai-sdk/openai": "^3.0.26",
    "@openrouter/ai-sdk-provider": "^2.2.3",
    "ai": "^6.0.77",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^17.3.1",
    "ollama-ai-provider-v2": "^1.2.0",
    "ora": "^8.1.1",
    "typescript": "^5.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.0"
  },
  "keywords": [
    "linter",
    "vibecode",
    "ai-generated",
    "code-quality",
    "eslint",
    "biome"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/francogalfre/vibrant"
