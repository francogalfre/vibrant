{
  "name": "vibrant",
  "private": true,
  "version": "1.0.0",
  "description": "CLI to detect vibecoded (AI-generated) code",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:cli": "bun run apps/cli/src/bin.ts",
    "cli": "bun run apps/cli/src/bin.ts",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "turbo": "^2.8.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "packageManager": "bun@1.2.17",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@google/generative-ai": "^0.24.1",
    "openai": "^6.18.0",
    "zod": "^4.3.6"
  }
}
